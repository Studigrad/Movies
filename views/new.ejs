<%- include('partials/head')%>
<body class="d-flex flex-column vh-100">
    <%- include('partials/navbar')%>
    <h1>Make New</h1>
    
         <form class="m-5  p-5" action="/new" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Title</label>
              <input type="text" name="title"class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title">
              
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Year</label>
              <input type="text" name="year" class="form-control" id="exampleInputPassword1" placeholder="Year">
            </div>
            <div class="form-group">
                <label for="format">Format</label>
                <input type="text" name="format" class="form-control" id="format"  placeholder="Enter Format">
                
              </div>
          
              <div class="form-group">
                <label for="stars">Stars</label>
               <!--<input type="text" class="form-control" name="text" id="text" placeholder="Text">--> 
                <textarea class="form-control" name="stars" id="stars" placeholder="Input Actors" rows="3"></textarea>
              </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
  