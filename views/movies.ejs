<%- include('partials/head')%>
<body class="d-flex flex-column vh-100">
    <%- include('partials/navbar')%>
    <h1>All movies</h1>
    <a href="/movies/sorted" class="btn btn-primary " >Sort Alphabetically</a>

    <form action="/movies/find" method="GET" class="mx-auto mt-5" >
        <div class="form-group">
            <label for="format">Find by Title</label>
            <input type="text" name="find" class="form-control" id="format"  placeholder="Enter what to find">
            <button  class="btn btn-secondary btn-sm mt-2">Find</button>
        </div>
    </form>
    <form action="/movies/find2" method="GET" class="mx-auto mt-5" >
        <div class="form-group">
            <label for="format">Find by Actor</label>
            <input type="text" name="find" class="form-control" id="format"  placeholder="Enter what to find">
            <button  class="btn btn-secondary btn-sm mt-2">Find</button>
        </div>
    </form>
    <div class="card mx-auto mt-5" style="width: 18rem;">
        <% for(let movie of movies){ %>     
             
        <div class="card-body mt-3">
          <h5 class="card-title"><%= movie.title %> </h5>
          <a href="/movies/<%=movie.id %>" class="btn btn-primary btn-sm">More</a>
          <form action="/movies/<%=movie.id %>" method="POST" style="display:inline-block;">
          <button  class="btn btn-primary btn-sm">Delete</button>
         </form>
        </div>  
        <hr class="hr-text" data-content="AND">
        <% } %> 
        
      </div>
    
